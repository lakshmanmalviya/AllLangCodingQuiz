<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lang_bg"
    android:orientation="vertical"
    tools:context=".Activities.AttendQuiz">

    <TextView
        android:id="@+id/resultAnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="#F8F8F8"
        android:textSize="34sp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/layoutToResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ql_bg"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_bg"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="Prev"
                    android:textAlignment="center"
                    android:textColor="#F5F5F5"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/copy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="?attr/actionModeCopyDrawable"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_bg"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="Next"
                    android:textAlignment="center"
                    android:textColor="#F5F5F5"
                    android:textSize="24sp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/questionTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/q_bg"
                                android:fontFamily="sans-serif-medium"
                                android:maxWidth="500dp"
                                android:minWidth="400dp"
                                android:padding="4dp"
                                android:text="Whole question will come here"
                                android:textColor="#D9D7D6"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/option1Tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/white_bg"
                                android:fontFamily="sans-serif-light"
                                android:maxWidth="500dp"
                                android:minWidth="400dp"
                                android:padding="5dp"
                                android:text="Whole question will come here"
                                android:textColor="#1B1B1B"
                                android:textSize="20sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/option2Tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/white_bg"
                                android:fontFamily="sans-serif-light"
                                android:maxWidth="500dp"
                                android:minWidth="400dp"
                                android:padding="5dp"
                                android:text="Whole question will come here"
                                android:textColor="#1B1B1B"
                                android:textSize="20sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/option3Tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/white_bg"
                                android:fontFamily="sans-serif-light"
                                android:maxWidth="500dp"
                                android:minWidth="400dp"
                                android:padding="5dp"
                                android:text="Whole question will come here"
                                android:textColor="#1B1B1B"
                                android:textSize="20sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/option4Tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/white_bg"
                                android:fontFamily="sans-serif-light"
                                android:maxWidth="500dp"
                                android:minWidth="400dp"
                                android:padding="5dp"
                                android:text="Whole question will come here"
                                android:textColor="#1B1B1B"
                                android:textSize="20sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp">

                        <LinearLayout
                            android:id="@+id/expLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/showExp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/white_bg"
                                android:padding="5dp"
                                android:text="See Explaination"
                                android:textAlignment="center"
                                android:textColor="#EF6C00"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/explainTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="30dp"
                                android:background="@drawable/white_bg"
                                android:fontFamily="sans-serif-medium"
                                android:maxWidth="500dp"
                                android:minWidth="400dp"
                                android:padding="4dp"
                                android:text="Whole question will come here"
                                android:textColor="#1B1B1B"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                android:visibility="gone"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </HorizontalScrollView>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>